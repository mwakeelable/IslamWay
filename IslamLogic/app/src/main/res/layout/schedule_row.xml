<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="@dimen/dim3"
    card_view:cardUseCompatPadding="false"
    card_view:cardBackgroundColor="@color/transparent"
    card_view:cardMaxElevation="@dimen/dim3"
    card_view:contentPadding="@dimen/dim5" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingBottom="@dimen/dim2"
            android:paddingTop="@dimen/dim2"
            android:text="Date"
            android:textColor="@color/white"
            android:textSize="@dimen/dimTex15"
            android:textStyle="bold" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvSuhurTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingBottom="@dimen/dim2"
            android:paddingTop="@dimen/dim2"
            android:text="Sahoor Time"
            android:textColor="@color/white"
            android:textSize="@dimen/dimTex15"
            android:textStyle="bold" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvIftarTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingBottom="@dimen/dim2"
            android:paddingTop="@dimen/dim2"
            android:text="Iftar Time"
            android:textColor="@color/white"
            android:textSize="@dimen/dimTex15"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.v7.widget.CardView>